// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  OWNER
}

model User {
  id            String         @id @default(cuid())
  name          String         @db.VarChar(60)
  email         String         @unique @db.VarChar(255)
  address       String?        @db.VarChar(400)
  passwordHash  String
  role          Role           @default(USER)
  ratings       Rating[]
  stores        Store[]        @relation("OwnerStores")
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([name])
  @@index([email])
  @@index([address])
  @@index([role])
}

model Store {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique @db.VarChar(255)
  address   String   @db.VarChar(400)
  owner     User?    @relation("OwnerStores", fields: [ownerId], references: [id], onDelete: SetNull)
  ownerId   String?
  ratings   Rating[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([address])
  @@index([ownerId])
}

model Rating {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId   String
  value     Int      @db.SmallInt // enforce 1â€“5 in app or via DB CHECK migration (see note)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storeId])
  @@index([storeId])
  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
  @@index([revoked])
  @@index([expiresAt])
}
